// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Java",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "false",
			"installGradle": "true"
		}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"github.classroom",
				"oracle.oracle-java",
				"mermaidchart.vscode-mermaid-chart",
				"yzhang.markdown-all-in-one",
				"vscjava.vscode-java-test"
			],
			"settings": {
				"java.server.launchMode": "Standard",
				"git.autofetch": true,
				"git.autofetchPeriod": 300,
				"git.postCommitCommand": "sync",
				// point to the Java 21 JDK installed in the container, so it does not look for a JDK installed by SDKMAN (which is not installed in this container due to "version":"none" in "ghcr.io/devcontainers/features/java:1")
				// an alternative to make gradle still work, is specifying the JDK in SDKMAN, e.g., "version":"21" or "version":"latest", and then use that JDK version.
				"java.jdt.ls.home": "/usr/local/openjdk-21",
				"java.import.gradle.java.home": "/usr/local/openjdk-21"
			}
		}
	}
}
